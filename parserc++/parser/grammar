/*!
 * \file grammar
 * \brief This file contains the grammar of the PDDL 3.1 Temporally Extended parser. This file is meant to be used with bisonc++. This grammar follows the one proposed by Daniel L. Kovacs. Temporally Extended is a feature proposed by Frederic Maris.
 * \author Alan BENIER, Martin LAGLEIZE, Nathan PRAT
 * \version 1.0
 * \date May 07th 2014
 */

// indicate the location of the scanner (here we use flexc++)
%scanner                ../scanner/Scanner.h

// indicate the function that read the tokens, located in the scanner file
%scanner-token-function d_scanner.lex()

// indicate the rule to start with
%start begin

// union structure of the types that might be used in this parser : a rule only return one of thoose types, their name correspond to the main rule of which they are the return
%union
{
	int integer;
	float number;
	bool open;
	std::string * name;
	std::vector<std::string> * list_name;
	std::vector<float> * list_float;
	std::pair< std::vector< std::string > *, std::string *> * atomic_formula;
	std::vector<TypedList*> * typedList_list;
	std::pair< std::string*, std::vector<TypedList*>* > * function_skeleton;
	std::vector< std::pair< std::string*, std::vector<TypedList*> * > * > * function_skeleton_list;
	std::pair< std::pair< std::vector< std::string > *, std::string*> *, bool > * literal;
	std::vector< std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> * , int >* > * > * pre_GD;
	std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> * , int > * > * timed_GD;
	std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> * , int > * > * cond_effect;
	std::pair<std::pair<std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> * , int >* > *,std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> * , int >* > *> *, float> * da_def_body;
	// same structure as da_def_body, but without de last float
	std::pair<std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> * , int >* > *,std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> * , int >* > *> * da_def_body_durationless;
}

// list of the tokens used in the definition of the rules (cf. scanner/lexer)
%token 	L_P
	R_P
	L_B
	R_B
	NS_T
	EQ
	SLASH
	STAR
	PLUS
	GT
	LT
	GOE
	LOE
	NUM
	DEFINE
	DOMAIN
	REQUIREMENTS
	STRIPS
	TYPING
	NEGATIVE_PRECONDITIONS
	DISJUNCTIVE_PRECONDITIONS
	EQUALITY
	EXISTENTIAL_PRECONDITIONS
	UNIVERSAL_PRECONDITIONS
	QUANTIFIED_PRECONDITIONS
	CONDITIONAL_EFFECTS
	FLUENTS
	NUMERIC_FLUENTS
	OBJECT_FLUENTS
	ADL
	DURATIVE_ACTIONS
	DURATION_INEQUALITIES
	CONTINUOUS_EFFECTS
	DERIVED_PREDICATES
	TIMED_INITIAL_LITERALS
	PREFERENCES
	CONSTRAINTS
	ACTION_COSTS
	TEMPORALLY_EXTENDED
	TYPES
	CONSTANTS
	PREDICATES
	FUNCTIONS
	NUMBER
	OBJECT
	EITHER
	ACTION
	PARAMETERS
	PRECONDITION
	EFFECT
	AND
	FORALL
	PREFERENCE
	OR
	NOT
	IMPLY
	EXISTS
	WHEN
	ASSIGN
	UNDEFINED
	SCALE_UP
	SCALE_DOWN
	INCREASE
	DECREASE
	DURATIVE_ACTION
	DURATION
	CONDITION
	AT
	OVER
	SUPPORTED
	FORBIDDEN
	SOMEWHERE
	ANYWHERE
	MINIMAL_DURATION
	TRANSITION_OVER
	MINUS
	START
	END
	ALL
	Q_M_DURATION
	Q_M
	DERIVED
	PROBLEM
	DD_DOMAIN
	OBJECTS
	INIT
	GOAL
	ALWAYS
	SOMETIME
	WITHIN
	AT_MOST_ONCE
	SOMETIME_AFTER
	SOMETIME_BEFORE
	ALWAYS_WITHIN
	HOLD_DURING
	HOLD_AFTER
	METRIC
	MINIMIZE
	MAXIMIZE
	TOTAL_TIME
	IS_VIOLATED
	LENGTH
	SERIAL
	PARALLEL
	TIMEPOINTS
	TIMEALIASES
	TIMECONSTRAINTS
	NAME

%%

begin:
	domain {}
	| problem {}
	;


/***************************************************/
/************** Domain Description *****************/
/***************************************************/		


/* <domain> */

domain:
	L_P DEFINE L_P DOMAIN name R_P domain_option1 {
		Parser::addDomain($5.name);
	}
	;

domain_option1:
	domain_option2
	| require_def domain_option2
	;

domain_option2:
	domain_option3
	| types_def domain_option3 {
		if (!Parser::isRequirement(TYPING)) Parser::lexical_error("Requirement :typing is needed");
	}
	;

domain_option3:
	domain_option4
	| constants_def domain_option4
	;

domain_option4:
	domain_option5
	| predicates_def domain_option5
	;

domain_option5:
	domain_option6
	| functions_def domain_option6 {
		if (!Parser::isRequirement(FLUENTS)) Parser::fatal_error("Requirement :fluents is needed");
	}
	;

domain_option6:
	domain_option7
	| constraints_domain domain_option7
	;

domain_option7:
	list_structure_def R_P
	;

/* <name> */

name:
	NAME {
		// d_scanner.matched() read the token that correspond to NAME which is not constant
		$$.name = new std::string(d_scanner.matched());
	}
	| AT {
		$$.name = new std::string("at");
	}
	| OVER {
		$$.name = new std::string("over");
	}
	| OBJECT {
		$$.name = new std::string("object");
	}
	;

/* <require-def> */

require_def:
	L_P REQUIREMENTS nvList_require_key R_P
	;

/* <require-key> */

require_key:
	STRIPS {
		Parser::addRequirement(STRIPS);
	}
	| TYPING {
		Parser::addRequirement(TYPING);
	}
	| NEGATIVE_PRECONDITIONS {
		Parser::addRequirement(NEGATIVE_PRECONDITIONS);
	}
	| DISJUNCTIVE_PRECONDITIONS {
		Parser::addRequirement(DISJUNCTIVE_PRECONDITIONS);
	}
	| EQUALITY {
		Parser::addRequirement(EQUALITY);}
	| EXISTENTIAL_PRECONDITIONS {
		Parser::addRequirement(EXISTENTIAL_PRECONDITIONS);
	}
	| UNIVERSAL_PRECONDITIONS {
		Parser::addRequirement(UNIVERSAL_PRECONDITIONS);
	}
	| QUANTIFIED_PRECONDITIONS {
		Parser::addRequirement(QUANTIFIED_PRECONDITIONS);
		Parser::addRequirement(EXISTENTIAL_PRECONDITIONS);
		Parser::addRequirement(UNIVERSAL_PRECONDITIONS);
	}
	| CONDITIONAL_EFFECTS {
		Parser::addRequirement(CONDITIONAL_EFFECTS);
	}
	| FLUENTS {
		Parser::addRequirement(FLUENTS);
		Parser::addRequirement(NUMERIC_FLUENTS);
		Parser::addRequirement(OBJECT_FLUENTS);
	}
	| NUMERIC_FLUENTS {
		Parser::addRequirement(NUMERIC_FLUENTS);
	}
	| OBJECT_FLUENTS {
		Parser::addRequirement(OBJECT_FLUENTS);
	}
	| ADL {
		Parser::addRequirement(STRIPS);
		Parser::addRequirement(TYPING);
		Parser::addRequirement(NEGATIVE_PRECONDITIONS);
		Parser::addRequirement(DISJUNCTIVE_PRECONDITIONS);
		Parser::addRequirement(EQUALITY);
		Parser::addRequirement(QUANTIFIED_PRECONDITIONS);
		Parser::addRequirement(CONDITIONAL_EFFECTS);
	}
	| DURATIVE_ACTIONS {
		Parser::addRequirement(DURATIVE_ACTIONS);
	}
	| DURATION_INEQUALITIES {
		Parser::addRequirement(DURATION_INEQUALITIES);
	}
	| CONTINUOUS_EFFECTS {
		Parser::addRequirement(CONTINUOUS_EFFECTS);
	}
	| DERIVED_PREDICATES {
		Parser::addRequirement(DERIVED_PREDICATES);
	}
	| TIMED_INITIAL_LITERALS {
		Parser::addRequirement(TIMED_INITIAL_LITERALS);
		Parser::addRequirement(DURATIVE_ACTIONS);
	}
	| PREFERENCES {
		Parser::addRequirement(PREFERENCES);
	}
	| CONSTRAINTS {
		Parser::addRequirement(CONSTRAINTS);
	}
	| ACTION_COSTS {
		Parser::addRequirement(ACTION_COSTS);
	}
	| TEMPORALLY_EXTENDED {
		Parser::addRequirement(TEMPORALLY_EXTENDED);
		Parser::addRequirement(DURATIVE_ACTIONS);
		Parser::addRequirement(STRIPS);
		Parser::addRequirement(TYPING);
		Parser::addRequirement(NUMERIC_FLUENTS);
	}
	;

/* <types-def> */
types_def:
	L_P TYPES typed_list_name R_P {
		// we add the types contained in typed_list_name
		if(!Parser::addTypes($3.typedList_list))
			Parser::fatal_error("Error in :types");
	}
	;

/* <contants-def> */

constants_def:
	L_P CONSTANTS typed_list_name R_P {
		// we add the constants contained in typed_list_name
		if (!Parser::addConstants($3.typedList_list))
			Parser::fatal_error("Error in :constants");
	}
	;

/* <predicates-def> */

predicates_def:
	L_P PREDICATES nvList_atomic_formula_skeleton R_P
	;

/* <atomic formula skeleton> */

atomic_formula_skeleton:
	L_P predicate typed_list_variable R_P {
		// we add the predicate wich name is predicate and parameters are typed_list_variable
		if (!Parser::addPredicate($2.name, $3.typedList_list)) {
			Parser::fatal_error("Error in :predicates");
		}
	}
	;

/* <predicate> */

predicate:
	name {
		$$.name = $1.name;
	}
	;

/* <variable> */

variable:
	Q_M name {
		$$.name = $2.name;
	 }
	;

/* <atomic function skeleton> */

atomic_function_skeleton:
	L_P function_symbol typed_list_variable R_P {
		// construction of the function_skeleton
		$$.function_skeleton = new std::pair< std::string*, std::vector<TypedList*>* > ($2.name, $3.typedList_list);
	}
	;

/* <function-symbol> */

function_symbol:
	name {
		$$.name = $1.name;
	}
	;

/* <functions-def> */

functions_def:
	L_P FUNCTIONS function_typed_list_atomic_function_skeleton R_P {
		if (!Parser::isRequirement(FLUENTS)) Parser::fatal_error("Requirement :fluents is not supported");
	}
	;

/* <function type> */

function_type:
	NUMBER {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
		// contruction of the function return either type
		$$.list_name = new std::vector<std::string> ();
		$$.list_name->push_back("number");
	}
	| type {
		if (!Parser::isRequirement(TYPING)) Parser::lexical_error("Requirement :typing is needed");
		if (!Parser::isRequirement(OBJECT_FLUENTS)) Parser::fatal_error("Requirement :object-fluents is not supported");
		$$.list_name = $1.list_name;
	}
	;

/* <constraints> */

constraints_domain:
	L_P CONSTRAINTS con_GD R_P {
		if (!Parser::isRequirement(CONSTRAINTS)) Parser::fatal_error("Requirement :constraints is not supported");
	}
	;

/* <structure-def> */

structure_def:
	action_def
	/*| durative_action_def { // without Temporally Extended extension
		if (!Parser::isRequirement(DURATIVE_ACTIONS)) Parser::lexical_error("Requirement :durative-actions is needed");
	}*/
	| te_durative_action_def { // with Temporally Extended extension
		if (!Parser::isRequirement(DURATIVE_ACTIONS)) Parser::lexical_error("Requirement :durative-actions is needed");
	}
	| derived_def {
		if (!Parser::isRequirement(DERIVED_PREDICATES)) Parser::fatal_error("Requirement :derived-predicates is not supported");
	}
	;

/* <primitive-type> */

primitive_type:
	name {
		$$.name = $1.name;
	}
	| OBJECT {
		$$.name = new std::string("object");
	}
	;

/* <type> */

type:
	primitive_type {
		// we contruct the list of the name of the simple type
		$$.list_name = new std::vector<std::string> ();
		$$.list_name->push_back(*$1.name);
	}
	| L_P EITHER nvList_primitive_type R_P {
		// we contruct the list of the names of the either type
		$$.list_name = $3.list_name;
	}
	;

/* <action_def> */

action_def:
	L_P ACTION action_symbol PARAMETERS L_P typed_list_variable R_P action_def_body R_P
	;

/* <action_symbol> */

action_symbol:
	name
	;

/* <action-def body> */

action_def_body:
	action_def_body_option1
	;

action_def_body_option1:
	action_def_body_option2
	| PRECONDITION emptyOr_pre_GD action_def_body_option2
	;

action_def_body_option2:
	/* empty */
	| EFFECT emptyOr_effect
	;

/* <pre-GD> */

pre_GD:
	pref_GD {
		// we construct the list of preconditions
		$$.pre_GD = new std::vector< std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > * > ();
		$$.pre_GD->push_back($1.timed_GD);
	}
	| L_P AND list_pre_GD R_P {
		$$.pre_GD = $3.pre_GD;
	}
	| L_P FORALL L_P typed_list_variable R_P pre_GD R_P {
		if (!Parser::isRequirement(UNIVERSAL_PRECONDITIONS)) Parser::fatal_error("Requirement :universal-preconditions is not supported");
	}
	;

/* <pref-GD> */

pref_GD:
	GD {
		$$.timed_GD = $1.timed_GD;
	}
	| L_P PREFERENCE pref_GD_option1 {
		if (!Parser::isRequirement(PREFERENCES)) Parser::fatal_error("Requirement :preferences is not supported");
	}
	;

pref_GD_option1:
	GD R_P
	| pref_name GD R_P
	;

/* <pref-name> */

pref_name:
	name
	;

/* <GD> */

GD:
	atomic_formula_term	{
		// we contruct the list of fluents of a precondition	
		$$.timed_GD = new std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > ();
		// 0b0 because the fluents are positive (and must be if you want to use TLP-GP)
		$$.timed_GD->push_back( new std::pair<std::pair< std::vector< std::string > *, std::string *> *, int > ($1.atomic_formula, 0b0) );
	}	
	| literal_term {
		if (!Parser::isRequirement(NEGATIVE_PRECONDITIONS)) Parser::fatal_error("Requirement :negative-preconditions is not supported");
		$$.timed_GD = $1.timed_GD;
	}
	| L_P AND list_GD R_P {
		$$.timed_GD = $3.timed_GD;
	}
	| L_P OR list_GD R_P {
		if (!Parser::isRequirement(DISJUNCTIVE_PRECONDITIONS)) Parser::fatal_error("Requirement :disjunctive-preconditions is not supported");
	}
	| L_P NOT GD R_P {
		if (!Parser::isRequirement(DISJUNCTIVE_PRECONDITIONS)) Parser::fatal_error("Requirement :disjunctive-preconditions is not supported");
		if ($3.timed_GD->front()->second & 0b01) // if the fluents were negative
			$3.timed_GD->front()->second -= 0b01;
		else // if the fluents were positive
			$3.timed_GD->front()->second += 0b01;
		$$.timed_GD=$3.timed_GD;
	}
	| L_P IMPLY GD GD R_P {
		if (!Parser::isRequirement(DISJUNCTIVE_PRECONDITIONS)) Parser::fatal_error("Requirement :disjunctive-preconditions is not supported");
	}
	| L_P EXISTS L_P L_P typed_list_variable R_P R_P GD R_P {
		if (!Parser::isRequirement(EXISTENTIAL_PRECONDITIONS)) Parser::fatal_error("Requirement :existential-preconditions is not supported");
	}
	| L_P FORALL L_P L_P typed_list_variable R_P R_P GD R_P {
		if (!Parser::isRequirement(UNIVERSAL_PRECONDITIONS)) Parser::fatal_error("Requirement :universal-preconditions is not supported");
	}
	| f_comp {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
	}
	;

/* <f-comp> */

f_comp:
	L_P binary_comp f_exp f_exp R_P
	;

/* <term> */

term:
	name {
		$$.name = $1.name;
	}
	| variable {
		$$.name = $1.name;
	}
	| function_term {
		if (!Parser::isRequirement(OBJECT_FLUENTS)) Parser::fatal_error("Requirement :object-fluents is not supported");
	}
	;

/* <function-term> */

function_term:
	L_P function_symbol list_term R_P {
		if (!Parser::isRequirement(OBJECT_FLUENTS)) Parser::fatal_error("Requirement :object-fluents is not supported");
	}
	;

/* <f-exp> */

f_exp:
	number {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
		$$.number = $1.number;
	}
	| L_P binary_op f_exp f_exp R_P {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
		// the operator is respresented by an integer, please refer to binary_op rule
		switch ($2.integer) {
		case 1:
			$$.number = $3.number * $4.number;
			break;
		case 2:
			$$.number = $3.number + $4.number;
			break;
		case 3:
			$$.number = $3.number - $4.number;
			break;
		case 4:
			$$.number = $3.number / $4.number;
			break;
		default :
			Parser::fatal_error("Unknown binary operator");
		}
	}
	| L_P multi_op f_exp nvList_f_exp R_P {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
		$$.number = $3.number;
		// the operator is respresented by an integer, please refer to multi_op rule
		switch ($2.integer) {
		case 1:
			for (std::vector<float>::reverse_iterator it = $4.list_float->rbegin(); it != $4.list_float->rend(); ++it) {
				$$.number *= (*it);
			}
			break;
		case 2:
			for (std::vector<float>::reverse_iterator it = $4.list_float->rbegin(); it != $4.list_float->rend(); ++it) {
				$$.number += (*it);
			}
			break;
		default :
			Parser::fatal_error("Unknown multi operator");
		}
	}
	| L_P MINUS f_exp R_P {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
		$$.number = - $3.number;
	}
	| f_head {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
		$$.number = $1.number;
	}
	;

/* <number> */

number:
	NUM {
		// we read the string corresponding to NUM and convert it to a float
		$$.number = atof(d_scanner.matched().c_str());
	}
	;

/* <f-head> */

f_head:
	L_P function_symbol list_term R_P {
		// we use the function function_symbol with list_term as parameters, this function with theese parameters must be initiated in :init first !
		$$.number = Parser::getFunctionReturn($2.name, $3.list_name);
	}
	| function_symbol {
		// we use the function function_symbol with no parameter, this function must be initiated in :init first !
		$$.number = Parser::getFunctionReturn($1.name, new std::vector<std::string> ());
	}
	;

/* <binary-op> */

binary_op:
	multi_op {
		$$.integer = $1.integer;
	}
	| MINUS { // -
		$$.integer = 3;
	}
	| SLASH { // /
		$$.integer = 4;
	}
	;

/* <multi-op> */

multi_op:
	STAR { // *
		$$.integer = 1;
	}
	| PLUS { // +
		$$.integer = 2;
	}
	;

/* <binary-comp> */

binary_comp:
	GT { // >
		$$.integer = 1;
	}
	| LT { // <
		$$.integer = 2;
	}
	| EQ { // =
		$$.integer = 3;
	}
	| GOE { // >=
		$$.integer = 4;
	}
	| LOE { // <=
		$$.integer = 5;
	}
	;

/* <effect> */

effect:
	L_P AND list_c_effect R_P
	| c_effect
	;

/* <c-effect> */

c_effect:
	L_P FORALL L_P typed_list_variable R_P effect R_P {
		if (!Parser::isRequirement(CONDITIONAL_EFFECTS)) Parser::fatal_error("Requirement :conditional-effects is not supported");
	}
	| L_P WHEN GD cond_effect R_P {
		if (!Parser::isRequirement(CONDITIONAL_EFFECTS)) Parser::fatal_error("Requirement :conditional-effects is not supported");
	}
	| p_effect
	;

/* <p-effect> */

p_effect:
	L_P NOT atomic_formula_term R_P {
		// we construct the list of effects of the current action
		$$.timed_GD= new std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > ();
		// 0b01 because the effects are negative
		$$.timed_GD->push_back( new std::pair<std::pair< std::vector< std::string > *, std::string *> *, int > ($3.atomic_formula, 0b01));
	}
	| atomic_formula_term {
		// we construct the list of effects of the current action		
		$$.timed_GD= new std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > ();
		// 0b0 because the effects are positive
		$$.timed_GD->push_back( new std::pair< std::pair< std::vector< std::string > *, std::string *> *, int > ($1.atomic_formula, 0b0));
	}
	| L_P assign_op f_head f_exp {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
	}
	| L_P ASSIGN function_term term R_P {
		if (!Parser::isRequirement(OBJECT_FLUENTS)) Parser::fatal_error("Requirement :object-fluents is not supported");
	}
	| L_P ASSIGN function_term UNDEFINED R_P {
		if (!Parser::isRequirement(OBJECT_FLUENTS)) Parser::fatal_error("Requirement :object-fluents is not supported");
	}
	;

/* <cond-effect> */

cond_effect:
	L_P AND list_p_effect R_P {
		$$.cond_effect = $3.cond_effect;
	}
	| p_effect {
		$$.cond_effect = $1.cond_effect;
	}
	;

/* <assign-op> */

assign_op:
	ASSIGN
	| SCALE_UP
	| SCALE_DOWN
	| INCREASE
	| DECREASE
	;

/* <durative-action-def> */

durative_action_def:
	L_P DURATIVE_ACTION da_symbol PARAMETERS L_P typed_list_variable R_P da_def_body R_P {
		// we add the durative-action of which name is da_symbol, variables are in typed_list_variable, and effects and preconditions are in da_def_body
		if(!Parser::addDurativeAction($3.name,$6.typedList_list,$8.da_def_body->second,$8.da_def_body->first->first,$8.da_def_body->first->second))
			Parser::fatal_error("Error in :durative-action");
	}
	;

/* <da-symbol> */

da_symbol:
	name {
		$$.name = $1.name;
	}
	;

/* <da-def body> */

da_def_body:
	DURATION duration_constraint CONDITION emptyOr_da_GD EFFECT emptyOr_da_effect {
		// we contsruct the pair of preconditions and effects
		std::pair< std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > *,std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > *>  *a = new std::pair<std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > *,std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > *> ($4.timed_GD, $6.cond_effect);
		
		$$.da_def_body=new std::pair< std::pair< std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > *,std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > *> *, float> (a, $2.number);
	}
	;

/* <da-GD> */

da_GD:
	pref_timed_GD {
		$$.timed_GD = $1.timed_GD;
	}
	| L_P AND list_da_GD R_P {	
		$$.timed_GD = $3.timed_GD;		
	}
	| L_P FORALL L_P typed_list_variable R_P da_GD R_P {
		if (!Parser::isRequirement(UNIVERSAL_PRECONDITIONS)) Parser::fatal_error("Requirement :universal-preconditions is not supported");
	}
	;

/* <pref-timed-GD> */

pref_timed_GD:
	timed_GD {
		$$.timed_GD = $1.timed_GD;			
	}
	| L_P PREFERENCE pref_name_option1 {
		if (!Parser::isRequirement(PREFERENCES)) Parser::fatal_error("Requirement :preferences is not supported");
	}
	;

pref_name_option1:
	timed_GD R_P
	| pref_name timed_GD R_P
	;

/* <timed-GD> */

timed_GD:
	L_P AT time_specifier GD R_P {
		// for each fluent of the list in GD, we put the AT specification (bit 2 : 0b10)
		for (std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* >::iterator it=$4.timed_GD->begin(); it != $4.timed_GD->end(); ++it) {
			(*it)->second += 1 << $3.integer;
		}
		$$.timed_GD=$4.timed_GD;
	}
	| L_P OVER interval GD R_P {
		// for each fluent of the list in GD, we put the OVER specification (bit 3 : 0b10)
		for ( std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* >::iterator it=$4.timed_GD->begin(); it != $4.timed_GD->end(); ++it) {
			(*it)->second += 1 << $3.integer;
		}
		$$.timed_GD=$4.timed_GD;
	}
	;

/* <time-specifier> */

time_specifier:
	START { // start
		$$.integer = 1;
	}
	| END { // end
		$$.integer = 2;
	}
	;

/* <interval> */

interval:
	ALL { // all
		$$.integer = 3;
	}
	;

/* <duration-constraint> */

duration_constraint:
	L_P AND nvList_simple_duration_constraint R_P {
		if (!Parser::isRequirement(DURATION_INEQUALITIES)) Parser::fatal_error("Requirement :duration-inequalities is not supported");
	}
	| L_P R_P { 
		$$.number = 0.0; 
	}
	| simple_duration_constraint {
		$$.number = $1.number;
	}
	;

/* <simple-duration-constraint> */

simple_duration_constraint:
	L_P d_op Q_M_DURATION d_value R_P { 
		$$.number = $4.number;
	}
	| L_P AT time_specifier simple_duration_constraint R_P	{
		$$.number = $4.number;
	}
	;

/* <d-op> */

d_op:
	LOE {
		if (!Parser::isRequirement(DURATION_INEQUALITIES)) Parser::fatal_error("Requirement :duration-inequalities is not supported");
	}
	| GOE {
		if (!Parser::isRequirement(DURATION_INEQUALITIES)) Parser::fatal_error("Requirement :duration-inequalities is not supported");
	}
	| EQ
	;

/* <d-value> */

d_value:
	number {
		$$.number = $1.number;
	}
	| f_exp {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
		$$.number = $1.number;
	}
	;

/* <da-effect> */

da_effect:
	L_P AND list_da_effect R_P {
		$$.cond_effect = $3.cond_effect;
	}
	| timed_effect {
		$$.cond_effect = $1.cond_effect;
	}
	| L_P FORALL L_P typed_list_variable R_P da_effect R_P {
		if (!Parser::isRequirement(CONDITIONAL_EFFECTS)) Parser::fatal_error("Requirement :conditional-effects is not supported");
	}
	| L_P WHEN da_GD timed_effect R_P {
		if (!Parser::isRequirement(CONDITIONAL_EFFECTS)) Parser::fatal_error("Requirement :conditional-effects is not supported");
	}
	;

/* <timed-effect> */

timed_effect:
	L_P AT time_specifier cond_effect R_P { 
		// for each fluent of the list in cond_effect, we put the AT specification (bit 2 for start, bit 3 for end)
		for (std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int > * >::iterator it = $4.cond_effect->begin(); it != $4.cond_effect->end() ; ++it){
			(*it)->second += 1 << $3.integer;
		}	
		$$.cond_effect=$4.cond_effect;
	}
	| L_P AT time_specifier f_assign_da R_P {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
	}
	| L_P assign_op_t f_head f_exp_t R_P {
		if (!Parser::isRequirement(CONTINUOUS_EFFECTS)) Parser::fatal_error("Requirement :continuous-effects is not supported");
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::fatal_error("Requirement :numeric-fluents is not supported");
	}
	;

/* <f-assign-da> */

f_assign_da:
	L_P assign_op f_head f_exp_da R_P
	;

/* <f-exp-da> */

f_exp_da:
	L_P binary_op f_exp_da f_exp_da R_P
	| L_P multi_op f_exp_da nvList_f_exp_da R_P
	| L_P MINUS f_exp_da R_P
	| Q_M_DURATION  {
		if (!Parser::isRequirement(DURATION_INEQUALITIES)) Parser::fatal_error("Requirement :duration-inequalities is not supported");
	}
	| f_exp
	;

/* <assign-op-t> */

assign_op_t:
	INCREASE
	| DECREASE
	;

/* <f-exp-t> */

f_exp_t:
	L_P STAR f_exp NS_T R_P
	| L_P STAR NS_T f_exp R_P
	| NS_T
	;

/* <derived-def> */

derived_def:
	L_P DERIVED atomic_formula_skeleton GD R_P
	;


/***************************************************/
/************** Problem Description ****************/
/***************************************************/


/* <problem> */

problem:
	L_P DEFINE L_P PROBLEM name R_P L_P DD_DOMAIN name R_P problem_option1 {
		if (!Parser::isDomain($9.name)) { // if the domain given is not the same as in the previous file
			Parser::fatal_error("Domain expected : " + (*$9.name));
		}
		else { // if it is the right domain, we add this problem
			Parser::addProblem($5.name);
		}
	}
	;

problem_option1:
	problem_option2
	| require_def problem_option2
	;

problem_option2:
	problem_option3
	| object_declaration problem_option3
	;

problem_option3:
	init goal problem_option4
	| init goal constraints_problem problem_option4 {
		if (!Parser::isRequirement(CONSTRAINTS)) Parser::fatal_error("Requirement :constraints is not supported");
	}
	;

problem_option4:
	problem_option5
	| metric_spec problem_option5 {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
	}
	;

problem_option5:
	R_P
	| length_spec R_P
	;

/* <object declaration> */

object_declaration:
	L_P OBJECTS typed_list_name R_P {
		// we add the objects defined in typed_list_name
		if (!Parser::addObjects($3.typedList_list))
			Parser::fatal_error("Error in :objects");
	}
	;

/* <init> */

init:
	L_P INIT list_init_el R_P
	;

/* <init-el> */

init_el:
	literal_name {
		// we add the fluent literal_name in inits at time 0
		if (!Parser::addInit($1.literal, 0.))
			Parser::fatal_error("Error in :init");
	}
	| L_P AT number literal_name R_P {
		if (!Parser::isRequirement(TIMED_INITIAL_LITERALS)) Parser::lexical_error("Requirement :timed-initial-literals is needed");
		// we add the fluent literal_name in inits at time number
		if (!Parser::addInit($4.literal, $3.number))
			Parser::fatal_error("Error in :init");
	}
	| L_P EQ basic_function_term number R_P {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
		// we add the the initiated function basic_function_term with number as return, in inits
		if (!Parser::addInitiatedFunction($3.atomic_formula, $4.number))
			Parser::fatal_error("Error in :init");
	}
	| L_P EQ basic_function_term name R_P {
		if (!Parser::isRequirement(OBJECT_FLUENTS)) Parser::fatal_error("Requirement :object-fluents is not supported");
	}
	;

/* <basic-function-term> */

basic_function_term:
	function_symbol {
		// we construct the function function_symbol, with no parameter
		$$.atomic_formula = new std::pair< std::vector< std::string > *, std::string *> (new std::vector<std::string> (), $1.name);
	}
	| L_P function_symbol list_name R_P {
		// we construct the function function_symbol with list_name as parameters
		$$.atomic_formula = new std::pair< std::vector< std::string > *, std::string *> ($3.list_name, $2.name);
	}
	;

/* <goal> */

goal:
	L_P GOAL pre_GD R_P {
		// we add in goals the list of fluents contained in pre_GD
		if (!Parser::addGoals($3.pre_GD))
			Parser::fatal_error("Error in :goal");
	}
	;

/* <contraints> */

constraints_problem:
	L_P CONSTRAINTS pref_con_GD R_P {
		if (!Parser::isRequirement(CONSTRAINTS)) Parser::fatal_error("Requirement :constraints is not supported");
	}
	;

/* <pref-con-GD> */

pref_con_GD:
	L_P AND list_pref_con_GD R_P
	| L_P FORALL L_P typed_list_variable R_P pref_con_GD R_P {
		if (!Parser::isRequirement(UNIVERSAL_PRECONDITIONS)) Parser::fatal_error("Requirement :universal-preconditions is not supported");
	}
	| L_P PREFERENCE pref_con_GD_option1 {
		if (!Parser::isRequirement(PREFERENCES)) Parser::fatal_error("Requirement :preferences is not supported");
	}
	| con_GD
	;

pref_con_GD_option1:
	con_GD R_P
	| pref_name con_GD R_P
	;

/* <con-GD> */

con_GD:
	L_P AND list_con_GD R_P
	| L_P FORALL L_P typed_list_variable R_P con_GD R_P
	| L_P AT END GD R_P
	| L_P ALWAYS con2_GD R_P
	| L_P SOMETIME con2_GD R_P
	| L_P WITHIN number con2_GD R_P
	| L_P AT_MOST_ONCE con2_GD con2_GD R_P
	| L_P SOMETIME_AFTER con2_GD con2_GD R_P
	| L_P SOMETIME_BEFORE con2_GD con2_GD R_P
	| L_P ALWAYS_WITHIN number con2_GD con2_GD R_P
	| L_P HOLD_DURING number number con2_GD R_P
	| L_P HOLD_AFTER number con2_GD R_P
	;

/* <con2-GD> */

con2_GD:
	con_GD
	| GD
	;

/* <metric-spec> */

metric_spec:
	L_P METRIC optimization metric_f_exp R_P {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
	}
	;

/* <optimization> */

optimization:
	MINIMIZE
	| MAXIMIZE
	;

/* <metric-f-exp> */

metric_f_exp:
	L_P binary_op metric_f_exp metric_f_exp R_P
	| L_P multi_op metric_f_exp nvList_metric_f_exp R_P
	| L_P MINUS metric_f_exp R_P
	| number
	| L_P function_symbol list_name R_P
	| function_symbol
	| TOTAL_TIME
	| L_P TOTAL_TIME R_P
	| L_P IS_VIOLATED pref_name R_P {
		if (!Parser::isRequirement(PREFERENCES)) Parser::fatal_error("Requirement :preferences is not supported");
	}
	;

/* <length-spec> */

length_spec:
	L_P LENGTH length_spec_option1
	;

length_spec_option1:
	length_spec_option2
	| L_P SERIAL integer R_P length_spec_option2
	;

length_spec_option2:
	R_P
	| L_P PARALLEL integer R_P R_P
	;

/* <integer> */

integer:
	NUM {
		// we read the string corresponding to NUM and convert it to a float
		$$.number = atof(d_scanner.matched().c_str());
	}
	;


/***************************************************/
/*************** Temporally_Extended ***************/
/***************************************************/


/* <te-durative-action-def> */

te_durative_action_def:
	L_P DURATIVE_ACTION da_symbol PARAMETERS L_P typed_list_variable R_P DURATION duration_constraint te_durative_action_def_option1 {
		// we contruct the parameters of the actions (name, parameters, effects, preconditions, duration)
		std::pair< std::pair< std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > *,std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > *> *, float> * action_def_body = new std::pair< std::pair< std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > *,std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > *> *, float> ($10.da_def_body_durationless, $9.number);
		// then we add it in the list of actions
		if(!Parser::addDurativeAction($3.name, $6.typedList_list, action_def_body->second, action_def_body->first->first, action_def_body->first->second))
			Parser::fatal_error("Error in :durative-action");
	}
	;

te_durative_action_def_option1:
	te_durative_action_def_option2 {
		$$.da_def_body_durationless = $1.da_def_body_durationless;
	}
	| TIMEPOINTS L_P list_te_timepoint R_P te_durative_action_def_option2
	;

te_durative_action_def_option2:
	te_durative_action_def_option3 { 
		$$.da_def_body_durationless = $1.da_def_body_durationless;
	}
	| TIMEALIASES L_P list_te_timealias R_P te_durative_action_def_option3
	;

te_durative_action_def_option3:
	TIMECONSTRAINTS L_P list_te_timeconstraint R_P CONDITION emptyOr_te_da_GD EFFECT emptyOr_te_da_effect R_P
	| CONDITION emptyOr_te_da_GD EFFECT emptyOr_te_da_effect R_P {
		// we construct the pair of preconditions and effects of the action
		$$.da_def_body_durationless = new std::pair<std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > *,std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > *> ($2.timed_GD, $4.cond_effect);
	}
	;

/* <te-timepoint> */

te_timepoint:
	time_specifier {
		$$.integer = $1.integer;
	}
	| name {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
	}
	;

/* <te-timealias> */

te_timealias:
	L_P te_interval_name te_interval_def R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
	}
	;

/* <te-interval-name> */

te_interval_name:
	interval {
		$$.integer = $1.integer;
	}
	| name {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
	}
	;

/* <te-interval-def> */

te_interval_def:
	bracket te_timepoint_op te_timepoint_op bracket {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
	}
	;

/* <bracket> */

bracket:
	L_B { // [
		$$.open = true;
	}
	| R_B { // ]
		$$.open = false;
	}
	;

/* <te-timeconstraint> */

te_timeconstraint:
	L_P binary_comp te_timepoint_op te_timepoint_op R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
	}
	;

/* <te-timepoint-op> */

te_timepoint_op:
	te_timepoint {
		$$.integer = $1.integer;
	}
	| d_value
	| L_P binary_op te_timepoint_op te_timepoint_op R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
	}
	;

/* <te-interval> */

te_interval:
	te_interval_name {
		$$.integer = $1.integer;
	}
	| te_interval_def {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
	}
	;

/* <te-da-GD> */

te_da_GD:
	te_pref_timed_GD {
		$$.timed_GD=$1.timed_GD;
	}
	| L_P AND list_te_da_GD R_P {	
		$$.timed_GD=$3.timed_GD;		
	}
	| L_P FORALL L_P typed_list_variable R_P te_da_GD R_P {
		if (!Parser::isRequirement(UNIVERSAL_PRECONDITIONS)) Parser::fatal_error("Requirement :universal-preconditions is not supported");
	}
	;

/* <te-pref-timed-GD> */

te_pref_timed_GD:
	te_timed_GD {
		$$.timed_GD = $1.timed_GD;
	}
	| L_P PREFERENCE te_pref_timed_GD_option1 {
		if (!Parser::isRequirement(PREFERENCES)) Parser::fatal_error("Requirement :preferences is not supported");
	}
	;

te_pref_timed_GD_option1:
	te_timed_GD R_P
	| pref_name te_timed_GD R_P
	;

/* <te-timed-GD> */

te_timed_GD:
	L_P AT te_timepoint_op GD R_P {
		// for each fluent of the list in GD, we put the AT specification (bit 2 for start, bit 3 for end)
		for (std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* >::iterator it=$4.timed_GD->begin(); it != $4.timed_GD->end(); ++it){
			(*it)->second += 1 << $3.integer;
		}
		$$.timed_GD=$4.timed_GD;
	}
	| L_P OVER te_interval GD R_P {
		// for each fluent of the list in GD, we put the OVER specification (bit 4 for over all)
		for ( std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* >::iterator it=$4.timed_GD->begin(); it != $4.timed_GD->end(); ++it){
			(*it)->second += 1 << $3.integer;
		}
		$$.timed_GD=$4.timed_GD;
	}
	| L_P SUPPORTED te_interval GD R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
			// for each fluent of the list in GD, we put the SUPPORTED specification (bit 5 for supported all)
		for ( std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* >::iterator it=$4.timed_GD->begin(); it != $4.timed_GD->end(); ++it){
			(*it)->second += 1 << ($3.integer+1);
		}
		$$.timed_GD=$4.timed_GD;
	}
	| L_P FORBIDDEN te_interval GD R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
		// for each fluent of the list in GD, we put the FORBIDDEN specification (bit 5 for forbidden all)
		for ( std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* >::iterator it=$4.timed_GD->begin(); it != $4.timed_GD->end(); ++it){
			(*it)->second += 1 << ($3.integer+2);
		}
		$$.timed_GD=$4.timed_GD;
	}
	| L_P SOMEWHERE te_interval GD R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
		// for each fluent of the list inGD, we put the SOMEWHERE specification (bit 6 for somewhere all)
		Parser::fatal_error("Somewhere modality not supported yet");
	}
	| L_P ANYWHERE te_interval GD R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
		// for each fluent of the list in GD, we put the ANYWHERE specification (bit 7 for anywhere all)
		Parser::fatal_error("Anywhere modality not supported yet");
	}
	| L_P MINIMAL_DURATION d_value ANYWHERE te_interval GD R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
		// for each fluent of the list in GD, we put the MINIMAL_DURATION specification (bit 8 for minimal-duration all)
		Parser::fatal_error("Minimal-duration modality not supported yet");
	}
	;

/* <te-da-effect> */

te_da_effect:
	L_P AND list_te_da_effect R_P {
		$$.cond_effect=$3.cond_effect;
	}
	| te_timed_effect {
		$$.cond_effect=$1.cond_effect;
	}
	| L_P FORALL L_P typed_list_variable R_P te_da_effect R_P {
		if (!Parser::isRequirement(CONDITIONAL_EFFECTS)) Parser::fatal_error("Requirement :conditional-effects is not supported");
	}
	| L_P WHEN da_GD te_timed_effect R_P {
		if (!Parser::isRequirement(CONDITIONAL_EFFECTS)) Parser::fatal_error("Requirement :conditional-effects is not supported");
	}
	;

/* <te-timed-effect> */

te_timed_effect:
	L_P AT te_timepoint_op cond_effect R_P {
		// for each fluent of the list in cond_effect, we put the AT specification (bit 2 for start, bit 3 for end)
		for (std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int > * >::iterator it = $4.cond_effect->begin(); it != $4.cond_effect->end() ; ++it){
			(*it)->second += 1 << $3.integer;
		}
		$$.cond_effect=$4.cond_effect;
	}
	| L_P OVER te_interval cond_effect R_P {
		// for each fluent of the list in cond_effect, we put the OVER specification (bit 4 for over all)
		for (std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int > * >::iterator it = $4.cond_effect->begin(); it != $4.cond_effect->end() ; ++it){
			(*it)->second += 1 << $3.integer;
		}
		$$.cond_effect=$4.cond_effect;
	}
	| L_P SUPPORTED te_interval cond_effect R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
		// for each fluent of the list in cond_effect, we put the SUPPORTED specification (bit 5 for supported all)
		for (std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int > * >::iterator it = $4.cond_effect->begin(); it != $4.cond_effect->end() ; ++it){
			(*it)->second += 1 << ($3.integer+1);
		}	
		$$.cond_effect=$4.cond_effect;
	}
	| L_P FORBIDDEN te_interval cond_effect R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
		// for each fluent of the list in cond_effect, we put the FORBIDDEN specification (bit 5 for forbidden all)
		for (std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int > * >::iterator it = $4.cond_effect->begin(); it != $4.cond_effect->end() ; ++it){
			(*it)->second += 1 << ($3.integer+2);
		}
		$$.cond_effect=$4.cond_effect;
	}
	| L_P SOMEWHERE te_interval cond_effect R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
		// for each fluent of the list in cond_effect, we put the SOMEWHERE specification (bit 6 for somewhere all)
		Parser::fatal_error("Somewhere modality not supported yet");
	}
	| L_P ANYWHERE te_interval cond_effect R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
		// for each fluent of the list in cond_effect, we put the ANYWHERE specification (bit 7 for anywhere all)
		Parser::fatal_error("Anywhere modality not supported yet");
	}
	| L_P MINIMAL_DURATION d_value ANYWHERE te_interval cond_effect R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
		// for each fluent of the list in cond_effect, we put the MINIMAL_DURATION specification (bit 8 for minimal-duration all)
		Parser::fatal_error("Minimal-duration modality not supported yet");
	}
	| L_P TRANSITION_OVER te_interval cond_effect R_P {
		if (!Parser::isRequirement(TEMPORALLY_EXTENDED)) Parser::lexical_error("Requirement :temporally-extended is needed");
		// for each fluent of the list in cond_effect, we put the TRANSITION_OVER specification (bit 9 for transition-over all)
		for (std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int > * >::iterator it = $4.cond_effect->begin(); it != $4.cond_effect->end() ; ++it){
			(*it)->second += 1 << ($3.integer+6);
		}	
		$$.cond_effect=$4.cond_effect;
	}
	| L_P AT te_timepoint_op f_assign_da R_P {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
	}
	| L_P assign_op_t f_head f_exp_t R_P  {
		if (!Parser::isRequirement(CONTINUOUS_EFFECTS)) Parser::fatal_error("Requirement :continuous-effects is not supported");
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
	}
	;


/***************************************************/
/****************** Miscellaneous ******************/
/***************************************************/


/* <function typed list (x)> */

function_typed_list_atomic_function_skeleton:
	/* empty */
	| nvList_atomic_function_skeleton MINUS function_type function_typed_list_atomic_function_skeleton {
		// we add the functions defined in nvList_atomic_function_skeleton with function_type as return type
		if (!Parser::addFunctions($1.function_skeleton_list, $3.list_name)) {
			Parser::fatal_error("Error in :function");
		}
	}
	| nvList_atomic_function_skeleton {
		if (!Parser::isRequirement(NUMERIC_FLUENTS)) Parser::lexical_error("Requirement :numeric-fluents is needed");
		// we add the functions defined in nvList_atomic_function_skeleton, with no return type
		if (!Parser::addFunctions($1.function_skeleton_list, new std::vector<std::string> ())) {
			Parser::fatal_error("Error in :function");
		}
	}
	;


/* <typed list (x)> */

typed_list_name:
	list_name {
		// we construct the typedList that correspond to the list of names
		$$.typedList_list = new std::vector<TypedList*> ();
		if ($1.list_name->size() != 0) {
			// we add the empty type
			$$.typedList_list->push_back(new TypedList(new std::vector<std::string> (), $1.list_name));
		}
	}
	| nvList_name MINUS type typed_list_name {
		// we construct the typedList that correspond to the list of names with type as either type
		if (!Parser::isRequirement(TYPING)) Parser::lexical_error("Requirement :typing is needed");
		$4.typedList_list->push_back(new TypedList($3.list_name, $1.list_name));
		$$.typedList_list = $4.typedList_list;
	}
	;

typed_list_variable:
	list_variable {
		// we construct the typedList that correspond to the list of variables
		$$.typedList_list = new std::vector<TypedList*> ();
		if ($1.list_name->size() != 0) {
			// we add the empty type
			$$.typedList_list->push_back(new TypedList(new std::vector<std::string> (), $1.list_name));
		}
	}
	| nvList_variable MINUS type typed_list_variable {
		// we construct the typedList that correspond to the list of variables with type as either type
		if (!Parser::isRequirement(TYPING)) Parser::lexical_error("Requirement :typing is needed");
		$4.typedList_list->push_back(new TypedList($3.list_name, $1.list_name));
		$$.typedList_list = $4.typedList_list;
	}
	;

/* <emptyOr (x)> */

emptyOr_pre_GD:
	L_P R_P
	| pre_GD
	;

emptyOr_effect:
	L_P R_P
	| effect
	;

emptyOr_da_GD:
	L_P R_P	{
		$$.timed_GD =new std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* >();
	}
	| da_GD	{
		$$.timed_GD= $1.timed_GD; 
	}
	;

emptyOr_da_effect:
	L_P R_P	{
		$$.cond_effect = new std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > ();
	}
	| da_effect {
		$$.cond_effect=$1.cond_effect;
	}
	;

emptyOr_te_da_GD:
	L_P R_P	{
		$$.timed_GD = new std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > ();
	}
	| te_da_GD	{
		$$.timed_GD = $1.timed_GD; 
	}
	;

emptyOr_te_da_effect:
	L_P R_P	{
		$$.cond_effect = new std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* >();
	}
	| te_da_effect {
		$$.cond_effect = $1.cond_effect;
	}
	;

/* <litteral (t)> */

literal_term:
	atomic_formula_term{		
		$$.timed_GD= new std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* >  ();	
		int init = 0b0;
		$$.timed_GD->push_back( new std::pair< std::pair< std::vector< std::string > *, std::string *> *, int > ($1.atomic_formula,init) );
	}
	| L_P NOT atomic_formula_term R_P{
		$$.timed_GD= new std::vector< std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >* > ();	
		int init = 0b0;
		$$.timed_GD->push_back( new std::pair< std::pair< std::vector< std::string > *, std::string *> *, int >($1.atomic_formula,init) );
	}
	;

literal_name:
	atomic_formula_name {		
		$$.literal = new std::pair<std::pair< std::vector< std::string > *, std::string *> * , bool >($1.atomic_formula, true);
	}
	| L_P NOT atomic_formula_name R_P {
		$$.literal = new std::pair<std::pair< std::vector< std::string > *, std::string *> * , bool >($3.atomic_formula, false);
	}
	;

/* <atomic formula (t)> */

atomic_formula_term:
	L_P predicate list_term R_P {
		$$.atomic_formula= new std::pair< std::vector< std::string > *, std::string *>($3.list_name,$2.name);
	}
	| L_P EQ term term R_P {
		if (!Parser::isRequirement(EQUALITY)) Parser::fatal_error("Requirement :equality is not supported");
	}
	;

atomic_formula_name:
	L_P predicate list_name R_P {
		$$.atomic_formula = new std::pair< std::vector< std::string > *, std::string *>($3.list_name,$2.name);
	}
	| L_P EQ name name R_P {
		if (!Parser::isRequirement(EQUALITY)) Parser::fatal_error("Requirement :equality is not supported");
	}
	;

